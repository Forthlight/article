<h2>Type</h2>
<p>Choose the types of articles you are interested in</p>

<%= form_tag(article.guide_path(:category), :method => :get) do -%>
  <div>
    <% @types.each do |type| %>
      <div>
        <%= check_box_tag 'types[]', type.title, checked = is_checked?(session[:types], type.title), id: type.title.gsub(/\s+/, "") %>
        <%= label_tag type.title.gsub(/\s+/, ""), type.title %>
      </div>
    <% end %>
  </div>
  <div><%= submit_tag 'Next', :class=>"mock-btn" %></div>
<% end -%>